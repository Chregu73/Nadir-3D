Global WindowSerial

Global t0, t1, t2, t3, t4, t5, essPo, essBa, essDa, essPa, essSt, essHa, b0, b1

Declare SerSetUebernehmen(EventType)
Declare SerSetAbbrechen(EventType)

Procedure OpenWindowSerial(x = 0, y = 0, width = 232, height = 184)
  WindowSerial = OpenWindow(#PB_Any, x, y, width, height, "Einstellungen serielle Schnittstelle", #PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_ScreenCentered | #PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_ScreenCentered)
  t0 = TextGadget(#PB_Any, 8, 8, 72, 16, "Port:")
  t1 = TextGadget(#PB_Any, 8, 32, 72, 16, "Baud:")
  t2 = TextGadget(#PB_Any, 8, 56, 72, 16, "Datenbits:")
  t3 = TextGadget(#PB_Any, 8, 80, 72, 16, "Parität:")
  t4 = TextGadget(#PB_Any, 8, 104, 72, 16, "Stopbits:")
  t5 = TextGadget(#PB_Any, 8, 128, 72, 16, "Handshake:")
  essPo = ComboBoxGadget(#PB_Any, 88, 8, 136, 20, #PB_ComboBox_Editable)
  essBa = ComboBoxGadget(#PB_Any, 88, 32, 136, 20)
  essDa = ComboBoxGadget(#PB_Any, 88, 56, 136, 20)
  essPa = ComboBoxGadget(#PB_Any, 88, 80, 136, 20)
  essSt = ComboBoxGadget(#PB_Any, 88, 104, 136, 20)
  essHa = ComboBoxGadget(#PB_Any, 88, 128, 136, 20)
  b0 = ButtonGadget(#PB_Any, 120, 152, 104, 24, "Abbrechen")
  b1 = ButtonGadget(#PB_Any, 8, 152, 104, 24, "Übernehmen")
EndProcedure

Procedure WindowSerial_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case b0
          SerSetAbbrechen(EventType())          
        Case b1
          SerSetUebernehmen(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

